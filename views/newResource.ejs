<!DOCTYPE html>
<html lang="en">

<head>
  <title>Home Page</title>

  <meta charset="UTF-8" >
  <meta http-equiv="X-UA-Compatible" content="IE=edge" >
  <meta name="viewport" content="width=device-width, initial-scale=1.0" >

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" />
  <link rel="stylesheet" href="/vendor/border-box.css" />
  <link rel="stylesheet" href="/styles/main.css" />
  <link rel="stylesheet" href="/styles/layout.css" />
</head>
<body>
    <%- include('partials/_navbar') %>
    <h1>Submit Resource</h1>
    <form action="/api/resources" method="post" id="resources">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" required><br>
        
        <label for="description">Description:</label>
        <textarea id="description" name="description" rows="4" required></textarea><br>
        
        <label for="url">URL:</label>
        <input type="url" id="url" name="url" required><br>
        
        <label for="img_url">Image URL (optional):</label>
        <input type="url" id="img_url" name="img_url"><br>

        <label for="category">Category:</label>
        <select id="category" name="category">
            <option value="test" selected>Test</option>
        </select><br>

        <button id="post-resource" type="submit">Submit</button>
        
    </form>

    <script src="/vendor/jquery-3.0.0.js"></script>
    <script src="/scripts/app.js"></script>
    <script src="/scripts/resources.js"></script>
</body>
</html>